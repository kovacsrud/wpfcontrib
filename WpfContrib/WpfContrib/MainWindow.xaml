<Window x:Class="WpfContrib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfContrib"
        mc:Ignorable="d"
        Title="WPFContrib" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="3" Width="300" Height="40" FontSize="26">Start</Button>
        <Button Grid.Row="2" Width="300" Height="40" FontSize="26">Start2</Button>
        <Button Grid.Row="1" Width="300" Height="40" FontSize="26">Start3</Button>
        <Button Grid.Row="0" Width="300" Height="40" FontSize="26">Start4</Button>


    </Grid>
</Window>
